<odoo>
  <data>
    <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">project.view_task_form2.inherit</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="contract_id" />
                    <field name="ticket_no" />
                    <field name="scope_of_work" />
                    <field name="travel_start" />
                    <field name="arrival_on_site" />
                    <field name="repair_start" />
                    <field name="repair_stop" />
                    <field name="leave_site" />
                    <field name="travel_stop" />
                    <field name="km_start" />
                    <field name="km_till_date" />
                    <field name="km_end" />
                </xpath>
            </field>
        </record>


