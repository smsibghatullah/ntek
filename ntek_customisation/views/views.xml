<odoo>
  <data>
    <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">project.view_task_form2.inherit</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="contract_id" />
                    <field name="ticket_no" />
                    <field name="scope_of_work" />
                    <field name="travel_start" />
                    <field name="travel_stop" />
                    <field name="arrival_on_site" />
                    <field name="repair_start" />
                    <field name="repair_stop" />

                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="km_start" />
                    <field name="km_till_date" />
                    <field name="km_end" />
                    <field name="sign_off_taken" />
                    <field name="sign_off_submitted" />
                    <field name="leave_site" />
                    <field name="field_engineer_note" />
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

            </field>
        </record>


      <record model="ir.ui.view" id="project_type_view_tree">
          <field name="name">Project Type Tree</field>
          <field name="model">project.type</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"></field>
              </tree>
          </field>
      </record>
      <record id="project_type_action" model="ir.actions.act_window">
          <field name="name">Project Type</field>
          <field name="res_model">project.type</field>
          <field name="view_mode">tree,form</field>
      </record>
      <menuitem name="Project Type" id="menu_project_type" parent="project.menu_main_pm"
                action="project_type_action" sequence="4" />

      <record model="ir.ui.view" id="project_sub_type_view_tree">
          <field name="name">Project Sub Type Tree</field>
          <field name="model">project.sub.type</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="project_type"></field>
                  <field name="name"></field>
              </tree>
          </field>
      </record>
      <record id="project_sub_type_action" model="ir.actions.act_window">
          <field name="name">Project Sub Type</field>
          <field name="res_model">project.sub.type</field>
          <field name="view_mode">tree,form</field>
      </record>
      <menuitem name="Project Sub Type" id="menu_project_sub_type" parent="project.menu_main_pm"
                action="project_sub_type_action" sequence="5" />

      <record model="ir.ui.view" id="view_task_form3">
            <field name="name">project.view_task_form3.inherit</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='name']" position="after">
                    <field name="description" placeholder="Project Description"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="project_type" />
                    <field name="project_sub_type" />
                    <field name="start_date" />
                    <field name="end_date" />
                </xpath>
                <xpath expr="//field[@name='privacy_visibility']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//group[@name='misc']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
      </record>


       <record id="project.open_create_project" model="ir.actions.act_window">
            <field name="name">Create a Project</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project.edit_project"/>
            <field name="target">current</field>
        </record>

      <record id="project.menu_project_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
      </record>

      <record id="project.menu_project_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
      </record>
      <record id="project.menu_project_report" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
      </record>

  </data>
</odoo>